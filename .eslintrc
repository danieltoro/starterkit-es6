{
  "extends": "airbnb",
  "parserOptions": {
    "ecmaVersion": 2017
  },
  "env": {
    "node": true,
    "browser": true,
    "es6": true
  },
  "rules": {
    "comma-dangle": ["error", {
      "arrays": "never",
      "objects": "ignore",
      "imports": "never",
      "exports": "never",
      "functions": "ignore"
    }],
    "no-unused-vars": ["error", {
        "vars": "local",
        "args": "none"
      }
    ],
    "no-console": 0,
    "arrow-parens": ["error", "as-needed"],
    "no-underscore-dangle": ["error", { "allowAfterThis": true, "allow": ["_id"] }],
    "consistent-return": ["error", { "treatUndefinedAsUnspecified": false }]
  }
}
